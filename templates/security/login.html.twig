{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href=" {{asset('css/login.css')}} ">
    <link rel="stylesheet" href=" {{asset('css/newUser.css')}} ">
    {# <link rel="stylesheet" href=" {{asset('css/_boxes.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_buttons.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_grid.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_typography.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_variables.scss')}}"> #}
    {# <link rel="stylesheet" href=" {{asset('css/block/_app-form.scss')}}"> #}
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block header %}
    <div class="wrapper">
        <div class="container-fluid">
            <header class="header">
                <img src="{{ asset("/images/logo.svg")}}" alt="Maleteo">
            </header>
        </div>
    </div>
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="center">
    <h1 class="h3 mb-3 font-weight-normal loginText">Introduce tus datos</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    </div>
    <div class="centerButton">
    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    </div>
    
</form>
{% endblock %}

{% block footer %}
    <footer class="footer pos">
        <div class="wrapper">
        <div class="container-fluid">
            <img src= "{{ asset("/images/logo.svg")}}"
                alt="Maleteo"
                class="footer__logo">
            <p class="footer__claim">
            Hecho con ❤️en Madrid
            </p>
        </div>
       
        </div>
    </footer>
{% endblock %}
