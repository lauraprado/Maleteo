{% endblock %}

{% block header %}
    <div class="wrapper">
        <div class="container-fluid">
            <header class="header">
                <img src="{{ asset("/images/logo.svg")}}" alt="Maleteo">
            </header>
        </div>
    </div>
{% endblock %}

{% block body %}
    {{form_start(formulario)}}
    <input type="submit" value="enviar">
    {{form_end(formulario)}}
{% endblock %}

{% block footer %}
    <footer class="footer">
        <div class="wrapper">
        <div class="container-fluid">
            <img src= "{{ asset("/images/logo.svg")}}"
                alt="Maleteo"
                class="footer__logo">
            <p class="footer__claim">
            Hecho con ❤️en Madrid
            </p>
        </div>
        </div>
    </footer>
{% endblock %}