{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href=" {{asset('css/_boxes.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_buttons.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_grid.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_typography.scss')}} ">
    <link rel="stylesheet" href=" {{asset('css/_variables.scss')}}">
    {# <link rel="stylesheet" href=" {{asset('css/block/_app-form.scss')}}"> #}
{% endblock %}

{% block header %}
    <div class="wrapper">
        <div class="container-fluid">
            <header class="header">
                <img src="{{ asset("/images/logo.svg")}}" alt="Maleteo">
            </header>
        </div>
    </div>
{% endblock %}

{% block body %}
<main>
    <div class="jumbo">
      <div class="wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6">
              <div class="jumbo__ww-title">
                <div class="jumbo__w-title">
                  <h1 class="jumbo__title heading1">
                    Gana dinero guardando equipaje a viajeros como tu
                  </h1>
                  <ul class="jumbo__app-btns">
                    <li>
                      <a href="#">
                        <img src="{{ asset("/images/app-store.svg")}}"
                             alt=""
                             class="jumbo__app-btn">
                      </a>
                    </li>
                    <li>
                      <a href="">
                        <img src="{{ asset("/images/google-play.svg")}}"
                             alt=""
                             class="jumbo__app-btn">
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="wrapper">
      <div class="container-fluid">
        <section class="howworks">
          <h2 class="howworks__title heading2">
            ¿Cómo funciona?
          </h2>
          <ol class="howworks__steps row">
            <li class="col-md-4">
              <div class="howworks__step">
                <div class="howworks__step-w-bola">
                  <div class="howworks__step-bola">
                    <span class="heading3">1</span>
                  </div>
                </div>
                <div class="howworks__step-w-txt">
                  <p class="howworks__step-title heading3">
                    Date de alta
                  </p>
                  <p class="howworks__step-txt">
                    Una olla de algo más vaca que carnero, salpicón las más noches, duelos y quebrantos los sábados.
                  </p>
                </div>
              </div>
            </li>
            <li class="col-md-4">
              <div class="howworks__step">
                <div class="howworks__step-w-bola">
                  <div class="howworks__step-bola">
                    <span class="heading3">1</span>
                  </div>
                </div>
                <div class="howworks__step-w-txt">
                  <p class="howworks__step-title heading3">
                    Date de alta
                  </p>
                  <p class="howworks__step-txt">
                    Una olla de algo más vaca que carnero, salpicón las más noches, duelos y quebrantos los sábados.
                  </p>
                </div>
              </div>
            </li>
            <li class="col-md-4">
              <div class="howworks__step">
                <div class="howworks__step-w-bola">
                  <div class="howworks__step-bola">
                    <span class="heading3">1</span>
                  </div>
                </div>
                <div class="howworks__step-w-txt">
                  <p class="howworks__step-title heading3">
                    Date de alta
                  </p>
                  <p class="howworks__step-txt">
                    Una olla de algo más vaca que carnero, salpicón las más noches, duelos y quebrantos los sábados.
                  </p>
                </div>
              </div>
            </li>
          </ol>
        </section>

        <section class="app-form">
          <div class="row">
            <div class="col-md-5">
              <div class="app-form__w-app-img">
                <img src="{{ asset("/images/iPhoneX.png")}}" 
                     srcset="{{ asset("/images/iPhoneX@2x.png")}} 2x, {{ asset("/images/iPhoneX.png")}} 1x "
                     alt=""
                     class="app-form__app-img">
              </div>
            </div>
            <div class="col-md-5 col-md-offset-1">
              <div class="the-form">
              
                <form method='post'>
                  <p class="the-form__title heading3">
                    Solicita una demo
                  </p>
                  
                  <div class="the-form__group">
                    <label for="name">
                      Nombre
                    </label>
                    <input type="text"
                          name="name"
                          id="name"
                          class="the-form__input"
                          placeholder="Vincent Chase">
                  </div>

                  <div class="the-form__group">
                    <label for="email">
                      Email
                    </label>
                    <input type="email"
                          name="email"
                          id="email"
                          class="the-form__input"
                          placeholder="vincent@mga.com">
                  </div>

                  <div class="the-form__group">
                    <label for="city">
                      Ciudad
                    </label>
                    <select name="city"
                            id="city"
                            class="the-form__input the-form__select">
                      <option value="">Madrid</option>
                      <option value="">Puerto Hurraco</option>
                      <option value="">Villabolluyos</option>
                    </select>
                  </div>

                  <div class="the-form__group the-form__group_checkbox">
                    <input type="checkbox"
                          id="privacity">
                    <label for="privacity">
                      Aceptas la <a href="#">política de privacidad</a>
                    </label>
                  </div>

                  <input type="submit"
                        class="the-form__btn btn btn-lg btn-primary"
                        value="Enviar">
                </form>
                
              </div>
            </div>
          </div>
        </section>

        <section class="opinions">
          <h2 class="opinions__title heading2">
            Opiniones de otros guardianes
          </h2>
          <ul class="row">
          {# {% for opinion in opiniones %} #}
            <li class="col-md-4">
              <div class="opinion">

                <blockquote class="opinion__blq simple-bubble text-large">
                  {{opiniones[0].comentario}}
                  {# Tras el enorme éxito internacional de su primera colaboración, “Bailar”, que ganó un galardón en los Premios #}
                </blockquote>
                <p class="opinion__author text-large">
                  {{opiniones[0].autor}}
                </p>
                <p class="opinion__author-address">
                  {{opiniones[0].ciudad}}
                </p>
              </div>
            </li>
            <li class="col-md-4">
              <div class="opinion">
                <blockquote class="opinion__blq simple-bubble text-large">
                  {{opiniones[1].comentario}}
                </blockquote>
                <p class="opinion__author text-large">
                  {{opiniones[1].autor}}
                </p>
                <p class="opinion__author-address">
                  {{opiniones[1].ciudad}}
                </p>
              </div>
            </li>
            <li class="col-md-4">
              <div class="opinion">
                <blockquote class="opinion__blq simple-bubble text-large">
                  {{opiniones[2].comentario}}
                </blockquote>
                <p class="opinion__author text-large">
                  {{opiniones[2].autor}}
                </p>
                <p class="opinion__author-address">
                  {{opiniones[2].ciudad}}
                </p>
              </div>
            </li>
            {# {% endfor %} #}
          </ul>
        </section>
      </div>  
    </div>

  </main>
{% endblock %}

{% block footer %}
    <footer class="footer">
        <div class="wrapper">
        <div class="container-fluid">
            <img src= "{{ asset("/images/logo.svg")}}"
                alt="Maleteo"
                class="footer__logo">
            <p class="footer__claim">
            Hecho con ❤️en Madrid
            </p>
        </div>
        </div>
    </footer>
{% endblock %}