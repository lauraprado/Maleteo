{% extends 'base_tabla.html.twig' %}



{% block header %}
    <div class="wrapper">
        <div class="container-fluid">
            <header class="header">
                <img src="{{ asset("/images/logo.svg")}}" alt="Maleteo">
            </header>
        </div>
    </div>
{% endblock %}

{% block body %}
    <h2 class="howworks__title">Listado de Usuarios </h2>
        <div>
            
                <table id="tabla" class="tabla" width=25%>
                    <tr >
                        <th class="tabla__th">Usuario</th>
                        <th class="tabla__th">Email</th>
                        <th class="tabla__th">Ciudad</th>
                    </tr>
                    {% for opinion in opiniones %}
                        <tr>                        
                            <td class="table_grande"><h5 class="opinion__author text-large">{{ opinion.comentario }}</h5></td>
                            <td class="tabla__td"><p class="opinion__author-address">{{ opinion.autor }}</p></td>
                            <td class="tabla__td"><p class="opinion__author-address">{{ opinion.ciudad }}</p>
                        </tr>
                    {% endfor %}
                </table>
            
        </div>
{% endblock %}

{% block footer %}
    <footer class="footer">
        <div class="wrapper">
        <div class="container-fluid">
            <img src= "{{ asset("/images/logo.svg")}}"
                alt="Maleteo"
                class="footer__logo">
            <p class="footer__claim">
            Hecho con ❤️en Madrid
            </p>
        </div>
        {% if is_granted('ROLE_USER') %}
            <a href="{{path('user')}}"> Listar usuarios |</a>
            <a href="{{path('homepage')}}"> Home |</a>
            <a href="{{path('app_logout')}}">Salir</a>          
        {% else %}
          <a href="{{path('app_login')}}">Login</a>
        {% endif %}
        </div>
    </footer>
{% endblock %}